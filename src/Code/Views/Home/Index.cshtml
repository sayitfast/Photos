@model ParentAlbumViewModel

@inject UserManager<ApplicationUser> Menager

@{
	ViewData["Title"] = "Home Page";
}

<style>
	body {
		background-image: url(http://www.mrwallpaper.com/wallpapers/rain-forest.jpg);
		background-size: cover;
		background-repeat: no-repeat;
	}
</style>
<div class="row">
	<div class="text-center">
		<form id="search-form" asp-area="" asp-controller="Albums" asp-action="Search">
			@Html.TextBoxFor(m => m.Search.Name, new { @id = "search-box", @placeholder = "Search by name"})
			<input type="submit" id="search-button" value="Go"/>
		</form>
	</div>
</div>
<div class="row" id="latest-album-title">
	<div class="col-md-4 col-md-offset-4 text-center">
		Latest Albums
	</div>
</div>

<div class="albums">
	@if (Model.List == null || !Model.List.Any())
	{
		<h1>There aren't any albums.</h1>
	}
	else
	{
		@for (int i = 0; i < Model.List.Count; i++)
		{
			var album = Model.List[i];
			<div class="col-md-4" style="text-align: center;">

				<h3>@(Html.ActionLink<AlbumsController>(album.Name, c => c.Details(album.Id)))</h3>

				<h4><small>@album.Creator</small></h4>

			</div>
		}
		<div class="clearfix"></div>
	}
</div>

