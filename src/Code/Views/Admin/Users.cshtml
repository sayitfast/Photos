@model List<Code.Models.SearchViewModels.UserDetailsViewModel>


@foreach (var user in Model)
{
	<div class="row" id="personal-dashboard">
		<div class="col-md-3 text-center" id="u1">
			<br />
			<img src="~/uploads/@user.Id/@user.ProfilePictureName" />
			<br />
			<ul>
				<li id="al_info"><strong>@user.TotalAlbums</strong> albums</li>
				<li id="al_info"><strong>@user.TotalImages</strong> images</li>
				<li id="al_info"><strong>@user.TotalLikes</strong> likes</li>
			</ul>
			<ul>
				<li id="u_info"><span class="glyphicon glyphicon-envelope"></span> @user.Email</li>
				<li id="u_info"><span class="glyphicon glyphicon-home"></span> @user.Location</li>
			</ul>
		</div>
		<div class="col-md-9" id="u3">
			<div id="albums-dashboard" style="margin-top: 3px;">
				<h3>Images</h3>
				<table id="albums-table">
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Description</th>
						<th>Category</th>
						<th>Location</th>
						<th>Rating</th>
						<th>Published</th>
					</tr>
					@foreach (var image in user.Images)
					{
						<tr>
							<td>@image.Id</td>
							<td>@image.Name</td>
							<td>@image.Description</td>
							<td>@image.Category</td>
							<td>@image.Location</td>
							<td>@image.Rating</td>
							<td>@image.UploadedOn</td>
						</tr>
					}
				</table>
			</div>
			<div id="albums-dashboard" style="margin-top: 3px;">
				<h3>Albums</h3>
				<table id="albums-table">
					<tr>
						<th>Name</th>
						<th>Category</th>
						<th>Description</th>
						<th>Published</th>
						<th>View</th>
					</tr>
					@foreach (var album in user.Albums)
				{
						<tr>
							<td>@album.Name</td>
							<td>@album.Category</td>
							<td>@album.Description</td>
							<td>@album.CreatedOn</td>
							<td>@(Html.ActionLink<AdminController>("View", c => c.AlbumDashboard(album.Id)))</td>
						</tr>
				}
				</table>
				<br />
			</div>
			<div id="albums-dashboard" style="margin-top: 3px;">
				<h3>Comments</h3>
				<table id="albums-table">
					<tr>
						<th>Id</th>
						<th>Content</th>
						<th>Album</th>
						<th>Posted</th>
					</tr>
					@foreach (var comment in user.Comments)
				{
						<tr>
							<td>@comment.Id</td>
							<td>@comment.Content</td>
							<td>@(Html.ActionLink<AdminController>(comment.Album.Name, c => c.AlbumDashboard(comment.Album.Id)))</td>
							<td>@comment.CreatedOn</td>
						</tr>
				}
				</table>
			</div>
			<br />
		</div>
	</div>

}
<div class="clearfix"></div>