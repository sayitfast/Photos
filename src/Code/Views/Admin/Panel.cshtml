@model Code.Models.AdminViewModels.AdminViewModel

@Html.Partial("_PagingUsersPartial");

<div id="users-dashboard">
	<h3>Users</h3>
	<table id="users-table">
		<tr>
			<th></th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Location</th>
			<th>Albums</th>
			<th>Images</th>
			<th>Email</th>
			<th>Admin</th>
			<th>Inspect</th>
		</tr>
		@foreach (var user in Model.Users)
		{
			<tr>
				@if (user.ProfilePictureName != null)
				{
					<td><img src="~/uploads/@user.Id/@user.ProfilePictureName" id="image" /></td>
				}
				else
				{
					<td><img src="~/images/no-profile-image.jpg" id="image" /></td>
				}
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.Location</td>
				<td>@user.TotalAlbums</td>
				<td>@user.TotalImages</td>
				<td>@user.Email</td>
				@if(user.isAdmin == true)
				{
					<td><span class="glyphicon glyphicon-ok"></span></td>
				}
				else
				{
					<td><span class="glyphicon glyphicon-remove"></span></td>
				}
				<td>
					<a href="@(Url.Action("UserDetails", "Admin", new { @userId = user.Id}))">
			          <span class="glyphicon glyphicon-link"></span>	
				    </a>
				</td>
			</tr>

		}
	</table>
</div>

@Html.Partial("_PagingUsersPartial");

<div class="clearfix"></div>