@model Code.Models.AdminViewModels.ParentAdminViewModel

<div id="users-dashboard">
	<h3>Users</h3>
	<table id="users-table">
		<tr>
			<th></th>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Location</th>
			<th>Albums</th>
			<th>Images</th>
			<th>Email</th>
			<th>Admin</th>
		</tr>
		@foreach (var user in Model.Users)
		{
			<tr>
				@if (user.ProfilePictureName != null)
				{
					<td><img src="~/uploads/@user.Id/@user.ProfilePictureName" id="image" /></td>
				}
				else
				{
					<td><img src="~/images/no-profile-image.jpg" id="image" /></td>
				}
				<td>@user.FirstName</td>
				<td>@user.LastName</td>
				<td>@user.Location</td>
				<td>@user.TotalAlbums</td>
				<td>@user.TotalImages</td>
				<td>@user.Email</td>
				@if(user.isAdmin == true)
				{
					<td><span class="glyphicon glyphicon-ok"></span></td>
				}
				else
				{
					<td><span class="glyphicon glyphicon-remove"></span></td>
				}
			</tr>

		}
	</table>
</div>

<div id="albums-dashboard">
	<h3>Albums</h3>
	<table id="albums-table" >
		<tr>
			<th>Name</th>
			<th>Creator</th>
			<th>Category</th>
			<th>Description</th>
			<th>Published</th>
			<th>View</th>
		</tr>
		@foreach (var album in Model.Albums)
		{
			<tr>
				<td>@album.Name</td>
				<td>@album.Creator.FirstName @album.Creator.LastName</td>
				<td>@album.Category</td>
				<td>@album.Description</td>
				<td>@album.CreatedOn</td>
				<td>@(Html.ActionLink<AlbumsController>("View", c => c.Details(album.Id, album.Creator.Id)))</td>
			</tr>

		}
	</table>
</div>