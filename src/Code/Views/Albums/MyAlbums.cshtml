@model ParentAlbumViewModel

@if (Model.List == null || !Model.List.Any())
{
	<div class="col-md-6 col-md-offset-3 text-center">
		<h1>You don't have any albums.</h1>
		<h3>Click @(Html.ActionLink<AlbumsController>("here", c => c.Create())) to create one.</h3>
	</div>
}
else
{
	@for (int i = 0; i < Model.List.Count; i++)
	{
		var album = Model.List[i];
		<div class="col-md-4" style="text-align: center;">

			<h3>@(Html.ActionLink<AlbumsController>(album.Name, c => c.Details(album.Id)))</h3>

			<h4><small>@album.Creator</small></h4>

		</div>
	}
}
<div class="clearfix"></div>
