@model CreateAlbumViewModel

<div class="col-md-8 col-md-offset-2">
	@using (Html.BeginForm<AlbumsController>(c => c.Create(), FormMethod.Post, new { @enctype = "multipart/form-data" }))
	{ 
		<label>Choose file:</label>
		<input type="file" name="Files" id="Files" multiple />
		<br />
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Album name" })
		<br>
		@Html.TextAreaFor(m => m.Description, new { @class = "form-control", @placeholder = "Description" })
		<br>
		<input type="submit" name="submit" value="Upload" />
	}
</div>
