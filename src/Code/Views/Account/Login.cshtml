@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
	<div class="col-md-4 col-md-offset-4 text-center">
		<img src="~/images/title-logo.png" class="title_logo"/>
		<br />
		<h1 class="sign_in">Sign in to Photos</h1>
	</div>
</div>
<br />
<br />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <section>
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" id="login-form">
				  <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        <input asp-for="Email" class="form-control" placeholder="Email"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 col-md-offset-1">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                </div>
				<div class="text-center">
					<p>
						<a asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">New here? Create an account!</a>
					</p>
					<p>
						<a asp-action="ForgotPassword">Forgot your password?</a>
					</p>
				</div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
